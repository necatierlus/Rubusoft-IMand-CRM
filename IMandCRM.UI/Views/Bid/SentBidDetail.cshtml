                                            <!--begin::Select-->
                                            <select name="FirmManagerIdKod" asp-for="FirmManagerIdKod" data-control="select2" data-placeholder="Yönetici Seçiniz..." disabled class="form-select form-select-sm br0">
                                                <option value="">Yönetici Seçiniz...</option>
                                            </select>
                                            <!--end::Select-->
                                        </div>
                                        <!--end::Col-->
                                        <!--begin::Col-->
