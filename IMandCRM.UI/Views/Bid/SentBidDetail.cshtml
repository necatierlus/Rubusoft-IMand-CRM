                                                                            <div class="form-check form-switch form-check-custom form-check-solid me-10">
                                                                                <input class="form-check-input h-20px w-30px" type="checkbox" asp-for="DiscountUnitPriceIsShow" disabled name="DiscountUnitPriceIsShow" />
