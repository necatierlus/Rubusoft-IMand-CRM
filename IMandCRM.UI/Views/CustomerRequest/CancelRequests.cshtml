                <form id="CustomerRequestForm">
                    <!--begin::Table-->
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customer_requests_table">
                        <!--begin::Table head-->
                        <thead>
                            <!--begin::Table row-->
                            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                                <th class="w-10px pe-2">
                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_customer_requests_table .form-check-input" value="1" />
                                    </div>
                                </th>
                                <th class="min-w-125px">AD</th>
                                <th class="min-w-125px">E-MAİL</th>
                                <th class="min-w-125px">TELEFON</th>
                                <th class="min-w-125px">KULLANIM ALANI</th>
                                <th class="min-w-125px">TARİH</th>
                                <th class="min-w-125px text-center">DURUM</th>
                                <th class="text-center"></th>
                                <th class="text-center"></th>
                            </tr>
                            <!--end::Table row-->
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="fw-bold text-gray-600">
                            @foreach (var customerRequest in Model)
                            {
                                <tr data-bs-toggle="tooltip" data-bs-custom-class="tooltip-dark" data-bs-placement="top" title="@customerRequest.Description">
                                    <td>
                                        <div class="form-check form-check-sm form-check-custom form-check-solid">
                                            <input class="form-check-input" type="checkbox" value="@customerRequest.IdKod" name="DeleteCustomerRequests" />
                                        </div>
                                    </td>
                                    <td>
                                        @customerRequest.FirstName @customerRequest.LastName
                                    </td>
                                    <td>
                                        @customerRequest.Email
                                    </td>
                                    <td>
                                        @customerRequest.PhoneNumber
                                    </td>
                                    <td>
                                        @if (customerRequest.UsingSpace == 1)
                                        {
                                            <span>Eczane</span>
                                        }
                                        else if (customerRequest.UsingSpace == 2)
                                        {
                                            <span>Medikal</span>
                                        }
                                        else if (customerRequest.UsingSpace == 3)
                                        {
                                            <span>Optik</span>
                                        }
                                        else if (customerRequest.UsingSpace == 4)
                                        {
                                            <span>Güzellik Salonu</span>
                                        }
                                        else if (customerRequest.UsingSpace == 5)
                                        {
                                            <span>Güzellik Merkezi</span>
                                        }
                                        else if (customerRequest.UsingSpace == 6)
                                        {
                                            <span>Kuaför</span>
                                        }
                                        else if (customerRequest.UsingSpace == 7)
                                        {
                                            <span>Diğer</span>
                                        }
                                    </td>
                                    <td>
                                        @customerRequest.RequestDate.ToString("dd.MM.yyyy")
                                    </td>
                                    <td class="text-center">
                                        <!--begin::Select-->
                                        <select name="RequestStatus" data-control="select2" class="form-select form-select-solid" asp-for="@customerRequest.RequestStatus" CustomerRequestIdKod="@customerRequest.IdKod">
                                            <option value="1">Başvuru</option>
                                            <option value="2">Arama</option>
                                            <option value="3">Teklif</option>
                                            <option value="4">Satış</option>
                                            <option value="5">İptal</option>
                                        </select>
                                        <!--end::Select-->
                                    </td>

                                    <td class="text-center">
                                        <a href="#" class="description" data-bs-toggle="modal" data-bs-target="#kt_modal_description" CustomerRequestIdKod="@customerRequest.IdKod"><i class="fas fa-info-circle text-info" style="font-size:20px;" data-bs-toggle="tooltip" title="Açıklama Ekle"></i></a>
                                    </td>
                                    <td class="text-center">
                                        @if (customerRequest.IsFirm)
                                        {
                                            <a href="/CustomerRequest/CreateBid?idKod=@customerRequest.IdKod" class="createOffer" CustomerRequestIdKod="@customerRequest.IdKod"><i class="far fa-file-alt text-success" style="font-size:20px;" data-bs-toggle="tooltip" title="Teklif Oluştur"></i></a>
                                        }
                                        else
                                        {
                                            <a href="#" class="addFirm" data-bs-toggle="modal" data-bs-target="#kt_modal_firm_add" CustomerRequestIdKod="@customerRequest.IdKod"><i class="fas fa-plus-circle text-success" style="font-size:20px;" data-bs-toggle="tooltip" title="Firma Oluştur"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </form>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
