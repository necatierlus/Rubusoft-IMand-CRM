@section Scripts
{

    <!--begin::Page Vendors Javascript(used by this page)-->
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Page Vendors Javascript-->
    <!--begin::Page Custom Javascript(used by this page)-->
    @*<script src="~/assets/js/custom/apps/customers/list/export.js"></script>*@
    <script src="~/assets/js/custom/apps/customerrequest/list.js"></script>

    <!--end::Page Custom Javascript-->

    <script>

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut",
        };

    var msg;
    if ('@TempData["message"]' != undefined && '@TempData["message"]' != "") {
        msg = '@Html.Raw((string)TempData["message"])';
        if (msg != null) {
            msgArr = msg.split('|');
            if (msgArr[1] == "success") {
                toastr.success(msgArr[0]);
            } else if (msgArr[1] == "error") {
                toastr.error(msgArr[0]);
            } else if (msgArr[1] == "warning") {
                toastr.warning(msgArr[0]);
            } else if (msgArr[1] == "info") {
                toastr.info(msgArr[0]);
            }

        }
        }
        $(function () {

            //Açıklama popup
            $(".description").on("click", function () {
                var idKod = $(this).attr("CustomerRequestIdKod");
                $("#IdKodDescription").val(idKod);
                $.ajax({
                    url: "/CustomerRequest/GetRequestDescription?idKod=" + idKod,
                    type: "GET",
                    success: function (response) {
                        $("[name='Description']").val(response.description);
                    },
                    error: function (error) {

                    }
                });
            });

            var modalDescription = new bootstrap.Modal(document.querySelector('#kt_modal_description'));
            $("#kt_modal_description_cancel").on("click", function () {
                var form = document.querySelector('#kt_modal_description_form');
                form.reset();
                modalDescription.hide();
            });

            $("#kt_modal_description_close").on("click",function(){
                var form = document.querySelector('#kt_modal_description_form');
                form.reset();
            });

            $("[name='RequestStatus']").on("change", function () {
                debugger;
                var idKod = $(this).attr("CustomerRequestIdKod");
                var object = new Object();
                object.IdKod = idKod;
                object.RequestStatus = $(this).val();

                var dataVal = JSON.stringify(object);

                $.ajax({
                    url: "/CustomerRequest/ChangeRequestStatus",
                    type: "POST",
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    data: dataVal,
                    success: function (response) {
                        console.log(response);
                        if (response.responseStatus) {
                            toastr.success(response.messageText);
                            setTimeout(function () {
                                location.reload(true);
                            }, 1000);
                        } else {
                            toastr.error(response.messageText);
                        }
                    },
                    error: function (error) {

                    }
                });

            });

            //Firma ekleme popup
            $(".addFirm").on("click", async function () {
                var idKod = $(this).attr("CustomerRequestIdKod");
                $("#IdKodAddFirm").val(idKod);
                await $.ajax({
                    url: "/CustomerRequest/GetCustomer?idKod=" + idKod,
                    type: "GET",
                    success: function (response) {
                        $("[name='FirmName']").val(response.firstName + " " + response.lastName);
                        $("[name='FirmEmail']").val(response.email);
                        $("[name='ManagerFirstName']").val(response.firstName);
                        $("[name='ManagerLastName']").val(response.lastName);
                        $("[name='FirmPhoneNumber']").val(response.phoneNumber);
                    },
                    error: function (error) {

                    }
                });
            });

            var modalFirmAdd = new bootstrap.Modal(document.querySelector('#kt_modal_firm_add'));
            $("#kt_modal_firm_add_cancel").on("click", function () {
                var form = document.querySelector('#kt_modal_firm_add_form');
                form.reset();
                modalFirmAdd.hide();
            });

            $("#kt_modal_firm_add_close").on("click", function () {
                var form = document.querySelector('#kt_modal_firm_add_form');
                form.reset();
            });

            $("#kt_modal_firm_add_save").on("click", function () {

                var isValid = FormValidation();

                if (isValid) {

                    var valdata = $("#kt_modal_firm_add_form").serialize();

                    Swal.fire({
                        title: "Kaydetmek istediğinizden emin misiniz?",
                        icon: "warning",
                        showCancelButton: true,
                        cancelButtonText: "Hayır!",
                        confirmButtonText: "Evet!"
                    }).then(function (result) {
                        if (result.value) {
                            $.ajax({
                                url: "/CustomerRequest/FirmAdd",
                                type: "POST",
                                dataType: 'json',
                                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                                data: valdata,
                                success: function (response) {
                                    console.log(response);
                                    if (response.responseStatus) {
                                        toastr.success(response.messageText);
                                        setTimeout(function () {
                                            location.reload(true);
                                        }, 1000);
                                    } else {
                                        toastr.error(response.messageText);
                                    }
                                },
                                error: function (error) {

                                }
                            });
                        }
                    });

                }

            });

        });

        function FormValidation() {
            var isValid = true;
            if ($('[name="FirmName"]').val() == "") {
                toastr.warning("Firma adını giriniz.");
                isValid = false;
            }
            if ($('[name="FirmEmail"]').val() == "") {
                toastr.warning("Mail adresini giriniz.");
