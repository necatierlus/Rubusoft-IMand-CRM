@model UserDetailModel
@{
    ViewData["Title"] = "UserEdit";
}


<style>
    .form-group {
        margin-bottom: 1.75em;
    }
</style>
<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div data-kt-place="true" data-kt-place-mode="prepend" data-kt-place-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">Kullanıcı Düzenle</h1>
            <!--end::Title-->
            <!--begin::Separator-->
            <span class="h-20px border-gray-200 border-start mx-4"></span>
            <!--end::Separator-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="/Admin/UserList" class="text-muted text-hover-primary">Kullanıcılar</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-200 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-dark">Kullanıcı Düzenle</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->

    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-body p-0">
                <div class="wizard wizard-1" id="kt_projects_add" data-wizard-state="step-first" data-wizard-clickable="true">
                    <!--begin::Wizard Body-->
                    <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
                        <div class="col-xl-12 col-xxl-7">
                            <!--begin::Form Wizard-->
                            <form asp-action="UserEdit" asp-controller="Admin" method="post" id="kt_users_edit_form">
                                <!--begin::Step 1-->
                                <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">
                                    <h3 class="mb-10 font-weight-bold text-dark">Kullanıcı Düzenle:</h3>
                                    <div class="row">
                                        <input type="hidden" name="UserId" value="@Model.UserId" />
                                        <div class="col-xl-12">
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label required">Ad</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input type="text" class="form-control form-control-lg form-control-solid" asp-for="FirstName" placeholder="" name="FirstName" />
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label required">Soyad</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input type="text" class="form-control form-control-lg form-control-solid" asp-for="LastName" placeholder="" name="LastName" />
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label required">Kullanıcı Adı</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input type="text" class="form-control form-control-lg form-control-solid" asp-for="UserName" placeholder="" name="UserName" />
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label required">Email</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input type="email" class="form-control form-control-lg form-control-solid" asp-for="Email" placeholder="" name="Email" />
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label required">Telefon</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input type="text" class="form-control form-control-lg form-control-solid PhoneMask" asp-for="PhoneNumber" placeholder="" name="PhoneNumber" />
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                                                <div class="col-lg-9 col-xl-9">
                                                    @foreach (var rolename in ViewBag.Roles)
                                                    {
                                                        <div class="mb-3">
                                                            <input type="checkbox" class="form-check-input h-20px w-30px mt-3" name="selectedRoles" value="@rolename" id="@rolename" @(Model.SelectedRoles.Any(i => i == rolename) ? "checked" : "") />
                                                            <label class="custom-control-label mt-3" for="@rolename">@rolename</label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Mail Onay</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input asp-for="EmailConfirmed" type="checkbox" class="form-check-input h-20px w-30px mt-3">
                                                </div>
                                            </div>
                                            <div class="form-group row fv-row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Silinmiş mi?</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <input asp-for="IsDelete" type="checkbox" class="form-check-input h-20px w-30px mt-3">
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!--end::Step 1-->
                                <!--begin::Actions-->
                                <div class="d-flex justify-content-between border-top mt-5 pt-10">
                                    <div class="mr-2">
                                        <button id="kt_edit_user_submit" type="submit" class="btn btn-success font-weight-bolder text-uppercase px-9 py-4">Güncelle</button>
                                    </div>
                                </div>
                                <!--end::Actions-->
                            </form>
                            <!--end::Form Wizard-->
                        </div>
                    </div>
                    <!--end::Wizard Body-->
                </div>
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Post-->
@section Scripts
{
    <script src="~/assets/js/custom/apps/user-management/users/edit/edit.js"></script>

    <script>

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut",
        };

        var msg;
        if ('@TempData["message"]' != undefined && '@TempData["message"]' != "") {
            msg = '@Html.Raw((string)TempData["message"])';
            if (msg != null) {
                msgArr = msg.split('|');
                if (msgArr[1] == "success") {
                    toastr.success(msgArr[0]);
                } else if (msgArr[1] == "error") {
                    toastr.error(msgArr[0]);
                } else if (msgArr[1] == "warning") {
                    toastr.warning(msgArr[0]);
                } else if (msgArr[1] == "info") {
                    toastr.info(msgArr[0]);
                }

            }
        }

        Inputmask({
            "mask": "(999) 999-9999"
        }).mask(".PhoneMask");

    </script>

}




