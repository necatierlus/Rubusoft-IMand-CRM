                            <!--end::Button-->
                            <!--begin::Button-->
                            <button type="submit" id="kt_modal_add_stockpoint_submit" class="btn btn-primary">
                                <span class="indicator-label">Kaydet</span>
                            </button>
                            <!--end::Button-->
                        </div>
                        <!--end::Modal footer-->
                    </form>
                    <!--end::Form-->
                </div>
            </div>
        </div>
        <!--end::Modal - Customers - Add-->
        <!--end::Modals-->
    </div>
    <!--end::Container-->
</div>
